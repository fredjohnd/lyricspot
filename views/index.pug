doctype html
html
	head
		title= title
		link(rel="stylesheet" href="styles.css")
	body
		div= lyrics
		script(src="socket.io/socket.io.js")
		script(type="text/javascript").
			var socket = io();
			socket.on('lyric_received', function(lyrics) {
				document.querySelector('div').innerText = lyrics;
			});